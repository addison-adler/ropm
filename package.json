{
  "name": "ropm",
  "version": "0.0.1",
  "description": "",
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"src/**\"",
    "test": "nyc mocha",
    "test:nocover": "mocha",
    "publish-coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "main": "dist/cli.js",
  "bin": {
    "ropm": "dist/cli.js"
  },
  "author": "Bronley Plumb",
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^9.0.1",
    "glob-all": "^3.2.1",
    "npm-packlist": "^2.1.2",
    "roku-deploy": "^3.2.2",
    "typescript": "^3.9.6",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/fs-extra": "^9.0.1",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.22",
    "@types/npm-packlist": "^1.1.1",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.4.0",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "sinon": "^9.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.10.2"
  },
  "mocha": {
    "spec": "src/**/*.spec.ts",
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "fullTrace": true,
    "watchExtensions": [
      "ts"
    ]
  },
  "nyc": {
    "include": [
      "src/**/*.ts",
      "!src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register",
      "source-map-support/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true,
    "check-coverage": false,
    "lines": 100,
    "statements": 100,
    "functions": 100,
    "branches": 100
  }
}
